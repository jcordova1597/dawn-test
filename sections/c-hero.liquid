<style>
  #{{ section.id }} {
    font-size: 1em;
    padding-top: {{ section.settings.padding_top }}em;
    padding-bottom: {{ section.settings.padding_bottom }}em;
    height: 100vh;
    {% if section.settings.image %}
      background-image: url('{{ section.settings.image | image_url: width: 2500 }}');
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
    {% else %}
      background: {{ section.settings.bg_color }};
    {% endif %}
    position: relative;
  }

  #{{ section.id }} div,
  #{{ section.id }} h1,
  #{{ section.id }} h2,
  #{{ section.id }} h3 {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .page-width {
    position: relative;
  }

  #{{ section.id }} .c-section-top {
    display: flex;
    flex-direction: column;
    text-align: {{ section.settings.text_alignment }};
    align-items: center;
    justify-content: space-between;
    gap: 50px;
  }

  #{{ section.id }} .c-header_image {
    max-width: 866px;
    width: 90%;
    margin: 0 auto;
  }
  
  #{{ section.id }} .c-header_image img {
    object-fit: contain;
    width: 100%;
    height: auto;
    display: block;
  }
  
  #{{ section.id }} .c-b1 {
    background: #E9128A;
    font-family: "Barlow", sans-serif;
    font-weight: 500;
    color: white;
    font-size: 20px;
    line-height: 40px;
    padding: 5px 28px;
    text-decoration: none;
    border-radius: 20px;
    text-transform: uppercase;
    transition: all 0.4s ease-in;
  }

  #{{ section.id }} .c-b1:hover {
    background: #FE6BB2;
  }

  #{{ section.id }} .c-hero-item {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    justify-content: space-around;
    max-width: 913px;
  }

  #{{ section.id }} .c-hero-item {
    display: flex;
    gap: 1.12rem;
    align-items: center;
    justify-content: flex-start;
  }

  #{{ section.id }} .c-hi-img {
    width: 42px;
    height: 42px;
  }

  #{{ section.id }} .c-hi-img img {
    object-fit: contain;
    width: 100%;
  }

  @media (max-width: 1280px) {
  
  }
  

  @media (max-width: 990px) {
   
  }

</style>

{% assign block_item = section.blocks | where: 'type', 'Item' %}

<section id="{{ section.id }}" class="c-section">
  <div class="page-width">
    <div class="c-hero-box">
      <div class="c-section-top">
        {% if section.settings.header_image %}
          <div class="c-header_image">
            {{ section.settings.header_image | image_url: width: 1600 | image_tag: loading: 'lazy', height: 'auto' }}
          </div>
        {% endif %}
        {%- if section.settings.section_top_heading != empty -%}
          <h1 class="c-section-top-heading">{{ section.settings.heading }}</h1>
        {%- endif -%}
        {%- if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url }}" class="c-button {{ section.settings.button_style }}"><span class="c-b-text">{{ section.settings.button_text }}</span> </a>
        {% endif %}
      </div>
      {% if block_item.size > 0 %}
        <div class="c-hero_items">
          {% for block in section.blocks %}
            {% case block.type %}
              <div class="c-hero-item">
                <div class="c-hi-img">
                  {{ block.settings.image | image_url: width: 150 | image_tag: loading: 'lazy', height: 'auto' }}
                </div>
                <div class="c-hi-text">
                  <h3>{{ block.settings.heading }}</h3>
                  {% if block.settings.body != empty %}
                    {{ block.settings.body }}
                  {% endif %}
                </div>
              </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "C Hero",
    "blocks": [
      {
        "name": "Item",
        "type": "Item",
        "limit": 3,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Item Heading"
          },
          {
            "type": "richtext",
            "id": "body",
            "label": "Item Body"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "settings": [

      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "My heading"
      },
      {
        "type": "image_picker",
        "id": "header_image",
        "label": "Header Image"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      },
      {
        "type": "header",
        "content": "Section Button"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text",
        "default": "Buy Now"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Link"
      },
      {
        "type": "text",
        "id": "button_style",
        "label": "Button style",
        "default": "c-b1"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text alignment",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "header",
        "content": "Section Colors"
      },
      {
        "type": "color_background",
        "id": "bg_color",
        "label": "Background color",
        "default": "#000"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#000"
      },
      {
        "type": "header",
        "content": "Section Padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding top",
        "min": 0,
        "max": 15,
        "step": 1,
        "default": 4,
        "unit": "rem"
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "min": 0,
        "max": 15,
        "step": 1,
        "default": 4,
        "unit": "rem"
      }
    ],
    "presets": [
      {
        "name": "C Hero"
      }
    ]
  }
{% endschema %}