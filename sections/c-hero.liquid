<style>
  #{{ section.id }} {
    font-size: 1em;
    padding-top: {{ section.settings.padding_top }}em;
    padding-bottom: {{ section.settings.padding_bottom }}em;
    height: 100vh;
    {% if section.settings.image %}
      background-image: url('{{ section.settings.image | image_url: width: 2500 }}');
      background-size: cover;
      background-repeat: no-repeat;
      background-position-x: center;
    {% else %}
      background: {{ section.settings.bg_color }};
    {% endif %}
    position: relative;
  }

  #{{ section.id }} div,
  #{{ section.id }} h1,
  #{{ section.id }} h2,
  #{{ section.id }} h3 {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .page-width {
    position: relative;
  }

  #{{ section.id }} .c-section-top {
    display: flex;
    flex-direction: column;
    text-align: {{ section.settings.text_alignment }};
    align-items: center;
    gap: 3.1rem;
  }
  
  #{{ section.id }} .c-b1 {
    background: #E9128A;
    font-family: "Barlow", sans-serif;
    font-weight: 500;
    color: white;
    font-size: 20px;
    line-height: 40px;
    padding: 5px 48px;
  }


  @media (max-width: 1280px) {
  
  }
  

  @media (max-width: 990px) {
   
  }

</style>

<section id="{{ section.id }}" class="c-section">
  <div class="page-width">
    <div class="c-hero-box">
      <div class="c-section-top">
        <div class="c-section-top-rating">
          <span>{{ section.settings.subheading }}</span>
        </div>
        {%- if section.settings.section_top_heading != empty -%}
          <h1 class="c-section-top-heading">{{ section.settings.heading }}</h1>
        {%- endif -%}
        {%- if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url }}" class="c-button {{ section.settings.button_style }}"><span class="c-b-text">{{ section.settings.button_text }}</span> </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "C Hero",
    "blocks": [
      {
        "name": "Button",
        "type": "Button",
        "limit": 3,
        "settings": [
          {
            "type": "text",
            "id": "button_text",
            "label": "Button text",
            "default": "Buy Now"
          },
          {
            "type": "url",
            "id": "button_url",
            "label": "Button Link"
          },
          {
            "type": "text",
            "id": "button_style",
            "label": "Button style",
            "default": "c-b1"
          }
        ]
      }
    ],
    "settings": [

      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "My heading"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      },
      {
        "type": "header",
        "content": "Section Button"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text",
        "default": "Buy Now"
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Link"
      },
      {
        "type": "text",
        "id": "button_style",
        "label": "Button style",
        "default": "c-b1"
      },
      {
        "type": "select",
        "id": "text_alignment",
        "label": "Text alignment",
        "default": "left",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "header",
        "content": "Section Colors"
      },
      {
        "type": "color_background",
        "id": "bg_color",
        "label": "Background color",
        "default": "linear-gradient(270deg, #E23255 0%, #8E2788 100%)"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#000"
      },
      {
        "type": "header",
        "content": "Section Padding"
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding top",
        "min": 0,
        "max": 15,
        "step": 1,
        "default": 4,
        "unit": "rem"
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding bottom",
        "min": 0,
        "max": 15,
        "step": 1,
        "default": 4,
        "unit": "rem"
      }
    ],
    "presets": [
      {
        "name": "C Hero"
      }
    ]
  }
{% endschema %}