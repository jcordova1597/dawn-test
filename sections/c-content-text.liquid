<style>
  #{{ section.id }} {
    font-size: 16px;
    padding-top: {{ section.settings.padding_top }}em;
    padding-bottom: {{ section.settings.padding_bottom }}em;
    background-color: {{ section.settings.bg_color }};
    position: relative;
  }


  #{{ section.id }} .c-section-top-subheading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5em;
    margin: 0;
  }

  #{{ section.id }} div,
  #{{ section.id }} h2,
  #{{ section.id }} p {
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .page-width {
    position: relative;
    max-width: 1440px;
    padding: 0;
    {% if section.settings.full_width == true %}
      width: 100%;
    {% else  %}
      width: 90%;
    {% endif %}
  }

  #{{ section.id }} .c-ct-grid {
    display: grid;
    grid-template-columns: {{ section.settings.grid_proportion }};
    gap: 0em;
    width: 100%;
    overflow: hidden;
    position: relative;
    z-index: 1;
  }

  #{{ section.id }} .c-ct-grid > *,
  #{{ section.id }} .c-buttons-div {
    display: flex;
    justify-content: center;
    align-items: {{ section.settings.alignment }};
    text-align: {{ section.settings.text_alignment }};
    flex-direction: column;
  }

  #{{ section.id }} .c-ct-grid1 {
    gap: 40px;
    padding: {{ section.settings.padding_desktop }};
    {% if section.settings.flip == true %}
      order: 1;
    {% endif %}
  }

  #{{ section.id }} .c-ct-grid1 h2 {
    font-family: "Barlow", sans-serif;
    font-size: 60px;
    font-weight: bold;
    line-height: 90%;
    margin: 0;
  }

  #{{ section.id }} .c-ct-grid1 p {
    font-family: "Barlow", sans-serif;
    font-weight: 400;
    font-size: 20px;
    line-height: 160%;
    margin: 0;
  }

  #{{ section.id }} .c-b1 {
    background: #E9128A;
    font-family: "Barlow", sans-serif;
    font-weight: 500;
    color: white;
    font-size: 20px;
    line-height: 40px;
    padding: 5px 28px;
    text-decoration: none;
    border-radius: 20px;
    text-transform: uppercase;
    transition: all 0.4s ease-in;
    display: inline-block;
  }

  #{{ section.id }} .c-b1:hover {
    background: #FE6BB2;
  }

  #{{ section.id }} .c-ct-grid2,
  #{{ section.id }} .c-ct-grid2 img {
    max-height: 600px;
    {% if section.settings.image_size == 'full_size' %}
      object-fit: contain;
    {% else %}
      object-fit: cover;
    {% endif %}
  }

  #{{ section.id }} .c-ct-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    max-height: 100vh;
  }

  #{{ section.id }} .h1 {
    font-size: 3.5em;
    font-weight: 700;
  }

  #{{ section.id }} .c-buttons-div {
    margin: 0;
    display: flex;
    align-items: center;
  }

  @media (max-width: 990px) {
    #{{ section.id }} .c-ct-grid {
      grid-template-columns: 1fr;
      gap: 0em;
      width: 100%;
    }

    #{{ section.id }} .c-ct-grid1 {
      gap: 18px;
      padding: {{ section.settings.padding_mobile }};
      order: 1;
      align-items: flex-start;
      /* padding: 0em; */
    }

    #{{ section.id }} .c-ct-grid2 {
      width: 70%;
      margin: 0 auto;
    }
  }
  
</style>


<section id="{{ section.id }}" class="c-section">
  <div class="page-width">
    <div class="c-ct-grid">
      <div class="c-ct-grid1">
        {% if section.settings.heading != empty %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.paragraph != empty %}
          <div class="c-ct-para">{{ section.settings.paragraph }}</div>
        {% endif %}
        <div class="c-buttons-div">
          <a href="{{ section.settings.button_url }}" class="c-b1">{{ section.settings.button_text }}</a>
        </div>
      </div>
      <div class="c-ct-grid2">
        {% if section.settings.image %}
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag: loading: 'lazy', height: 'auto', class: 'c-ct-image'
          }}
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "C Content Text",
  "settings": [
    {
      "type": "header",
      "content": "Content Section"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "My heading"
    },
    {
      "type": "richtext",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique. Duis cursus, mi quis viverra ornare.</p>"
    },
    {
      "type": "header",
      "content": "Media Section"
    },
    {
      "type": "select",
      "id": "image_size",
      "label": "Image Size",
      "default": "full_size",
      "options": [
        {
          "value": "full_size",
          "label": "Contain"
        },
        {
          "value": "full_cover",
          "label": "Cover"
        }
      ]
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "checkbox",
      "id": "flip",
      "label": "Flip",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width",
      "default": false
    },
    {
      "type": "select",
      "id": "grid_proportion",
      "label": "Grid proportion",
      "default": "1fr 1fr",
      "options": [
        {
          "value": "1fr 1fr",
          "label": "1 | 1"
        },
        {
          "value": "1fr 0.75fr",
          "label": "1 | 0.75"
        },
        {
          "value": "0.75fr 1fr",
          "label": "0.75 | 1"
        }
      ]
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Content alignment",
      "default": "flex-start",
      "options": [
        {
          "value": "flex-start",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Right"
        }
      ]
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "left",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Buy Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Section Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#000"
    },
    {
      "type": "header",
      "content": "Content Padding"
    },
    {
      "type": "paragraph",
      "content": "2 values (with units) seprated by a space. The first value is for the y-direction padding and the second for the x-direction padding"
    },
    {
      "type": "text",
      "id": "padding_desktop",
      "label": "Content padding",
      "default": "10% 10%"
    },
    {
      "type": "text",
      "id": "padding_mobile",
      "label": "Content padding mobile",
      "default": "2em 1em 1em 1em"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 15,
      "step": 1,
      "default": 4,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 15,
      "step": 1,
      "default": 4,
      "unit": "rem"
    }
  ],
  "presets": [
    {
      "name": "C Content Text"
    }
  ]
}
{% endschema %}
